// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "devcont_intro_base",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:0-3.9-bullseye",
    "onCreateCommand": "sudo apt-get update; sudo apt-get install -y chromium",
    "customizations": {
        "vscode": {
            "extensions": [
                // install Marp extension for VScode to build slides
                "marp-team.marp-vscode",
                // python
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                // git essentials
                "piotrpalarz.vscode-gitignore-generator",
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // errors and highlighters
                "IgorSbitnev.error-gutters",
                "fabiospampinato.vscode-highlight",
                "mechatroner.rainbow-csv",
                // excalidraw
                "pomdtr.excalidraw-editor",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "telesoho.vscode-markdown-paste-image",
                "yzane.markdown-pdf",
                "bierner.markdown-mermaid",
                "AlanWalk.markdown-toc",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "vscode-icons-team.vscode-icons",
                "tomoki1207.pdf",
                "mutantdino.resourcemonitor"
            ]
        }
    }
}